<h1>Bored? Try This!</h1>
<div id="activity-card">
  <h2 id="activity-name">Loading...</h2>
  <p><strong>Type:</strong> <span id="activity-type"></span></p>
  <p><strong>Participants:</strong> <span id="activity-participants"></span></p>
</div>
<button id="next-activity">New Activity ðŸŽ¯</button>

<script>
  const card = document.getElementById('activity-card');
  const activityName = document.getElementById('activity-name');
  const activityType = document.getElementById('activity-type');
  const activityParticipants = document.getElementById('activity-participants');

  async function fetchActivity() {
    try {
      card.classList.remove('loaded'); // fade out

      const response = await fetch('https://www.boredapi.com/api/activity');
      const data = await response.json();

      activityName.textContent = data.activity || "No activity found";
      activityType.textContent = data.type || "Unknown";
      activityParticipants.textContent = data.participants || "Unknown";

      // Fade in
      setTimeout(() => {
        card.classList.add('loaded');
      }, 50);
    } catch (err) {
      console.error("Error fetching activity:", err);
      activityName.textContent = "Error fetching activity";
      activityType.textContent = "-";
      activityParticipants.textContent = "-";
      card.classList.add('loaded');
    }
  }

  document.getElementById('next-activity').addEventListener('click', fetchActivity);

  // Load first activity on page load
  fetchActivity();
</script>

